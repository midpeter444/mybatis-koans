<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
          PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
          "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

  <properties resource="net/thornydev/mybatis/test/config.properties"/>

  <typeAliases>
    <typeAlias type="net.thornydev.mybatis.test.koan23.FilmWithCategories" 
               alias="FilmWithCategories"/>
    <typeAlias type="net.thornydev.mybatis.test.koan23.Category" alias="Category"/>
    <typeAlias type="net.thornydev.mybatis.test.koan23.RatingTypeHandler" 
               alias="RatingTypeHandler"/>
  </typeAliases>

  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC" />
      <dataSource type="UNPOOLED">
        <property name="driver"   value="${driver}" />
        <property name="url"      value="${url}" />
        <property name="username" value="${username}" />
        <property name="password" value="${password}" />
      </dataSource>
    </environment>
  </environments>
  
  <mappers>
    <mapper resource="net/thornydev/mybatis/test/koan23/koan23-mapper.xml"/>
  </mappers>
  
</configuration>
